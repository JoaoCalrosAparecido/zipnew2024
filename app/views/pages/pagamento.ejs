                <img class="pay_" src="IMG/pagamento/pix.png" width="40px">
            </article>
            <Section id="displ">
                <article id="leff">
                    <form id="pixForm">
                        <input type="text" name="nome" id="nome" maxlength="40" placeholder="Nome*" class="inpu required" oninput="nameValidate()">
                        <br>
                        <input type="number" name="mes" id="mes" maxlength="40" placeholder="Mês*" class="input required" oninput="mesValidate()">
                        <input type="number" name="ano" id="ano" maxlength="40" placeholder="Ano*" class="input required" oninput="anoValidate()">
                        <br>

                            <input type="text" id="chavePix" placeholder="Digite a chave PIX" class="inpu required" required>
                            <br>
                            <input type="number" id="valor" placeholder="Digite o valor" class="inpu required" required>
